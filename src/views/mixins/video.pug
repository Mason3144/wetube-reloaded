mixin video(video)
    a(href=`/videos/${video.id}`).video-mixin 
        div.thumbnail_play(src=`/${video.fileUrl}`)
            div#thumbMouseover.video-mixin__thumb(style=`background-image:url(/${video.thumbUrl});background-size:cover;background-position:center;`)
            video#videoMouseover.hiding(src=`/${video.fileUrl}`,muted)
        div.video__avatar
            if video.owner.avatarUrl
                if video.owner.avatarUrl.startsWith("uploads")
                    img(src="/"+video.owner.avatarUrl,crossorigin)
                if !video.owner.avatarUrl.startsWith("uploads")
                    img(src=video.owner.avatarUrl,crossorigin)
            else 
                div.empty__avatar
            div.video-mixin__data
                span.video-mixin__title=video.title
                div.video-mixin__meta
                    span #{video.owner.name} | 
                    span #{video.meta.views} íšŒ
block scripts
