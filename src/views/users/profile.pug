extends ../base
include ../mixins/video

block content
    div.profile__data 
        if loggedInUser.avatarUrl
            if loggedInUser.avatarUrl.startsWith("uploads")
                img(src="/"+loggedInUser.avatarUrl, width="100", height="100").avatar
            if !loggedInUser.avatarUrl.startsWith("uploads")
                img(src=loggedInUser.avatarUrl, width="100", height="100").avatar
            h3=user.name
        else 
            div.avatar.empty__avatar
            h3=user.name
    div.video__grid
        each video  in user.videos
            +video(video)
        else
            span.empty__message No videos found